// Program Flow
digraph {
	rankdir=LR
	node [fillcolor=lightblue fontname=Helvetica shape=oval style=filled]
	getBetLines [label=getBetLines]
	getSlotSpin [label=getSlotSpin]
	main [label=main]
	len [label=len]
	append [label=append]
	urandom [label=urandom]
	print [label=print]
	int [label=int]
	input [label=input]
	range [label=range]
	choice [label=choice]
	deposit [label=deposit]
	isdigit [label=isdigit]
	remove [label=remove]
	items [label=items]
	printSlots [label=printSlots]
	getBetAmount [label=getBetAmount]
	sleep [label=sleep]
	"Main Script" [label=Start]
	enumerate [label=enumerate]
	lower [label=lower]
	"Main Script" -> urandom [label="(1)" fontcolor=red fontsize=10]
	getSlotSpin -> items [label="" fontcolor=red fontsize=10]
	getSlotSpin -> range [label="(symbolCount)" fontcolor=red fontsize=10]
	getSlotSpin -> append [label="(symbol)" fontcolor=red fontsize=10]
	getSlotSpin -> range [label="(cols)" fontcolor=red fontsize=10]
	getSlotSpin -> range [label="(rows)" fontcolor=red fontsize=10]
	getSlotSpin -> choice [label="(currentSymbols)" fontcolor=red fontsize=10]
	getSlotSpin -> remove [label="(value)" fontcolor=red fontsize=10]
	getSlotSpin -> append [label="(value)" fontcolor=red fontsize=10]
	getSlotSpin -> append [label="(column)" fontcolor=red fontsize=10]
	printSlots -> range [label="(expr)" fontcolor=red fontsize=10]
	printSlots -> len [label="(expr)" fontcolor=red fontsize=10]
	printSlots -> enumerate [label="(columns)" fontcolor=red fontsize=10]
	printSlots -> print [label="( |, expr)" fontcolor=red fontsize=10]
	printSlots -> print [label="( |)" fontcolor=red fontsize=10]
	deposit -> input [label="(Enter Deposit Amount: £)" fontcolor=red fontsize=10]
	deposit -> isdigit [label="" fontcolor=red fontsize=10]
	deposit -> int [label="(deposit)" fontcolor=red fontsize=10]
	deposit -> print [label="(Please enter a Deposit greater than £0!))" fontcolor=red fontsize=10]
	deposit -> print [label="(Please enter a Numerical Deposit!)" fontcolor=red fontsize=10]
	getBetLines -> input [label="(Enter Number Of Lines to Bet on: )" fontcolor=red fontsize=10]
	getBetLines -> isdigit [label="" fontcolor=red fontsize=10]
	getBetLines -> int [label="(numOfLines)" fontcolor=red fontsize=10]
	getBetLines -> print [label="(Please Bet on either: 1, 2 or 3 lines!)" fontcolor=red fontsize=10]
	getBetLines -> print [label="(Please enter a numerical value for number of lines!)" fontcolor=red fontsize=10]
	getBetAmount -> input [label="(Enter Bet Amount for Each Line: £)" fontcolor=red fontsize=10]
	getBetAmount -> isdigit [label="" fontcolor=red fontsize=10]
	getBetAmount -> int [label="(betAmount)" fontcolor=red fontsize=10]
	getBetAmount -> print [label="(expr)" fontcolor=red fontsize=10]
	getBetAmount -> print [label="(Please enter a Numerical Value for the Bet!)" fontcolor=red fontsize=10]
	getBetAmount -> print [label="(expr)" fontcolor=red fontsize=10]
	main -> deposit [label="" fontcolor=red fontsize=10]
	main -> getBetLines [label="" fontcolor=red fontsize=10]
	main -> getBetAmount [label="(balance, lines)" fontcolor=red fontsize=10]
	main -> print [label="(Invalid Bet Amount, Please Top Up!)" fontcolor=red fontsize=10]
	main -> print [label="(expr)" fontcolor=red fontsize=10]
	main -> print [label="(LOADING SLOTTY...)" fontcolor=red fontsize=10]
	main -> sleep [label="(2)" fontcolor=red fontsize=10]
	main -> input [label="(Type 's' to spin the slots: )" fontcolor=red fontsize=10]
	main -> lower [label="" fontcolor=red fontsize=10]
	main -> print [label="( <<-SLOTTTY->> )" fontcolor=red fontsize=10]
	main -> getSlotSpin [label="(MAX_ROWS, MAX_COLS, symbolCount)" fontcolor=red fontsize=10]
	main -> printSlots [label="(colsOut)" fontcolor=red fontsize=10]
	main -> print [label="( <<-<->-<->->> )" fontcolor=red fontsize=10]
	main -> print [label="(Invalid Input, Please Try Again Below..)" fontcolor=red fontsize=10]
	main -> sleep [label="(1)" fontcolor=red fontsize=10]
	"Main Script" -> main [label="" fontcolor=red fontsize=10]
}
